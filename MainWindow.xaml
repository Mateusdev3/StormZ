<Window x:Class="StormZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StormZ"
        mc:Ignorable="d"
        Title="STORMZ"
        Height="550" Width="1000"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <!-- 🌟 ESTILOS -->
    <Window.Resources>
        <Style x:Key="NeonButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#44FF6666"/>
            <!-- vermelho acetinado translúcido -->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Oblique"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#88FF4444"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Width" Value="168"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="6,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66FF4444"/>
                                <Setter Property="BorderBrush" Value="#FFFF2222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid MouseDown="Mouse">
        <!-- Fundo -->
        <Grid.Background>
            <ImageBrush ImageSource="Assets\fundo.png" Stretch="Fill"/>
        </Grid.Background>

        <!-- TOPO -->
        <Border Height="65" VerticalAlignment="Top" CornerRadius="10" Margin="10" Background="#AA0A0A0A">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <TextBlock x:Name="txtnick"
                           FontSize="24" FontWeight="Bold" FontStyle="Italic"
                           Foreground="red"
                           TextAlignment="Center" Width="400" Height="40"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="−" Width="40" Height="30" Click="Minimize_Click"
                        Background="#22000000" Foreground="White" BorderThickness="0"
                        FontSize="18" Cursor="Hand"/>
                <Button Content="X" Width="40" Height="30" Click="Close_Click"
                        Background="#33000000" Foreground="#FFFF4444" BorderThickness="0"
                        FontSize="16" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- RODAPÉ ILUMINADO -->
        <Border Width="1000" Height="120" VerticalAlignment="Bottom" Background="#66000000">
            <Border.Effect>
                <DropShadowEffect Color="#FFFF4444" BlurRadius="60" ShadowDepth="0"/>
            </Border.Effect>
        </Border>

        <!-- BOTÃO JOGAR no canto inferior direito -->
        <Button Content="Jogar"
                Click="btnJogar_Click"
                Style="{StaticResource NeonButton}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,30"/>

        <!-- BOTÃO ATUALIZAR no canto inferior esquerdo -->
        <Button Content="Atualizar"
                Click="btnBaixar_Click"
                Style="{StaticResource NeonButton}"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20,0,0,30"/>

        <!-- BOTÃO DISCORD centralizado -->
        <Button Click="Abrirdc"
                Style="{StaticResource NeonButton}"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="Assets\IconDiscord.png" Width="28" Height="28" Margin="0,0,5,0"/>
                <TextBlock Text="Discord" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <!-- BOTÕES LATERAIS -->
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20,80,0,0">
            <Button Click="Abrirconfig"
                    Style="{StaticResource NeonButton}"
                    Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="Assets\IconOptions.png" Width="28" Height="28" Margin="0,0,5,0"/>
                    <TextBlock Text="Config" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Content="Nickname"
                    Click="AbrirJanelaNome_Click"
                    Style="{StaticResource NeonButton}"/>
        </StackPanel>
    </Grid>
</Window>
