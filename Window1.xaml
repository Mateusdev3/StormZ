<Window x:Class="StormZ.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Digite seu nome" Height="180" Width="360"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        BorderThickness="0">

    <Window.Resources>
        <!-- Estilo de botão vermelho neon -->
        <Style x:Key="RedNeonButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#33FF6666"/>
            <!-- Vermelho acetinado -->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Oblique"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                BorderBrush="#88FF6666" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="BorderBrush" Value="#FFFF4444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid MouseDown="Mouse">
        <!-- Vidro escuro com brilho vermelho -->
        <Border CornerRadius="12" Background="#AA000000" BorderBrush="#55FF5555" BorderThickness="1" Padding="15">
            <Border.Effect>
                <DropShadowEffect Color="#AAFF5555" BlurRadius="25" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Digite seu nick:" Margin="0,0,0,10"
                           Foreground="white" FontSize="20" FontStyle="Oblique"
                           FontWeight="Bold" HorizontalAlignment="Center"/>


                <TextBox x:Name="txtNome" Height="30" Width="240"
                         FontSize="16" FontStyle="Italic"
                         Foreground="White"
                         Background="Black"/>


       

                <Button Content="Confirmar" Margin="0,15,0,0"
                        Click="Confirmar"
                        Style="{StaticResource RedNeonButton}"
                        HorizontalAlignment="Center" />
               
            </StackPanel>
        </Border>
    </Grid>
</Window>

    